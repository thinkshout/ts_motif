        {% include('@ts_motif/_includes/styleguide_sections/spacer-margin-visual.html.twig') %}
      </div>
    </div>

    <div class="ts-friendly">
      <div class="container p-site">
        {# COMMON TAILWIND UTILITIES #}
        {% include('@ts_motif/_includes/styleguide_sections/utilities-common.html.twig') %}
      </div>
    </div>
  </div>

  {% include('@ts_motif/_samples/sample-forms.html.twig') %}
