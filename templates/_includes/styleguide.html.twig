</div>

<div class="styleguide-menu-padding">
  <div class="site-container content-side-padding padding-vertical">
    <div class="grid-col-2">
      <div>
        <h2 class="h2 mt-md" id="fontstyles">Font styles</h2>
        <p class="mt-zero">assets/css/base/typography.css</p>
        {# Font styles #}
        {% for style in fontStyles %}
          <p class="{{ style }}">.{{ style }}</p>
        {% endfor %}
        <hr class="mt-sm mb-sm">
        {# Font styles as Links#}
        {% for style in fontStyles %}
          <p class="{{ style }}"><a href="#">.{{ style }} a</a></p>
        {% endfor %}
      </div>
      <div>
        <h3 class="h4 letter-spacing mt-md ">Common Variations</h3>
        <p class="m-zero">assets/css/base/typography.css</p>
        <hr class="mt-sm mb-sm">
        <h1 class="h1 white bg-black mb-xs p-card text-white">.h1.text-white</h1>
        <h2 class="h2 mb-xs ">.h2.text-gray-dk</h2>
        <h3 class="bg-gray-dk p-card h3 mb-xs text-white">.h3.text-white</h3>
        <h4 class="h4 mt-sm mb-zero text-black">.h4.text-black</h4>
        <h4 class="bg-gray-lt p-card h4 mt-sm text-gray-dk">.h4.text-gray-dk</h4>
        <h4 class="bg-black p-card h4 letter-spacing mt-zero text-white">.h4.letter-spacing.text-white</h4>
        <hr class="mt-sm mb-sm">
      </div>
    </div>
  </div>

  {# Modifiers #}
  <div class="friendly">
    <div class="site-container content-side-padding">
      <h3 class="h2" id="fontmodifiers">Modifiers</h3>
      <div class="grid-col-2">
        <div>
          <h3 class="h3 mt-md">Color</h3>
          <p class="mt-zero mb-sm">tokens/src/color.tokens.json</p>
          <h4 class="h4 letter-spacing mb-zero uppercase">Primary</h4>
          <p class="text-sm gray">.text-[color]. Add colors to $textColors</p>
          {% for color in textColorsDk %}
            <p class="text-{{ color }} m-zero text-sm">.text-{{ color }}</p>
          {% endfor %}
          {% for color in textColorsLt %}
            <p class="bg-black text-{{ color }} m-zero text-sm">.text-{{ color }}</p>
          {% endfor %}
          <h4 class="h4 letter-spacing mb-zero uppercase">Secondary</h4>

        </div>

        <div>
          <h3 class="h3 mt-md mb-sm">Weight</h3>
          <p class="mt-zero">tokens/src/typography.tokens.json</p>
          <p class="font-bold">.font-bold 700</p>
          <p class="font-semibold">.font-semibold 600</p>
          <p class="font-medium">.font-medium 500</p>
          <p class="font-regular">.font-regular 400</p>
          <p class="font-book">.font-book/.font-light 300</p>
        </div>
      </div> {# Closes .grid #}
    </div> {# Closes .site-container.content-side-padding #}
  </div>

  {# Buttons & Links #}
  <div class="friendly">
    <div class="site-container content-side-padding">
    <h2 class="h2 " id="linkstyles">Buttons and links</h2>
    <p class="mt-zero">sass/global/_buttons.scss</p>
      {% for btn in btnLinkStyles %}
        <a class="{{ btn }} inline-block mr-xs" href=" ">.{{ btn }}</a>
      {% endfor %}
      {% for btn in iconBtnLinkStyles %}
        <a class="{{ btn }} inline-block mr-xs" href=" ">.{{ btn }} {% include
            ('@ts_motif/_includes/icon-' ~ btn ~ '.html.twig') %}</a>
      {% endfor %}
    <div class="mt-sm">
      <h4 class="h4 mt-md">Include icons in twig files to animate them</h4>
      {% for btn in iconBtnLinkStyles %}
        <p class="body-sm inline-block mr-xs">
          {% include('@ts_motif/_includes/icon-' ~ btn ~ '.html.twig') %}
          { % include('@ts_motif/_includes/icon-{{ btn }}.html.twig') % }
        </p>
      {% endfor %}
    </div>

    <hr class="mb-md mt-md">
    <h3 class="h3 mb-sm">Social Links</h3>
    <div class="social-links">
      <ul>
        <li><a><i class="fa fa-facebook-square"></i></a></li>
        <li><a><i class="fa fa-twitter-square"></i></a></li>
        <li><a><i class="fa fa-linkedin"></i></a></li>
        <li><a><i class="fab fa-facebook-messenger"></i></a></li>
        <li><a><i class="fa fa-envelope"></i></a></li>
        <li><a><i class="fa fa-link"></i></a></li>
      </ul>
    </div>
    <div class="inline-block social-links-footer">
      <a><i class="fab fa-twitter"></i></a>
      <a><i class="fab fa-linkedin"></i></a>
    </div>
  </div> {# Closes .site-container.content-side-padding#}
