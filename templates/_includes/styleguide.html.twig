{# Global Style Guide available at /style-guide #}
{{ attach_library('ts_motif/styleguide') }}
{%
  set sizes = [
    '3xs',
    '2xs',
    'xs',
    'sm',
    'base',
    'md',
    'lg',
    'xl',
    '2xl',
    '3xl',
    '4xl',
  ]
%}

{%
  set fontStyles = [
    'h1',
    'h2',
    'h3',
    'h4',
    'h5',
    'h6',
    'body-lg',
    'body-md',
    'body-sm',
    'body-xs',
    'text-nav',
    'text-label',
  ]
%}
{# Displays on lt bg #}
{%
  set textColorsDk = [
    'black',
    'gray-dk',
  ]
%}

{# Displays on dk bg #}
{%
  set textColorsLt = [
  'white',
  'gray-lt',
  ]
%}

{%
  set bgColorsDk = [
    'black',
    'gray-dk',
  ]
%}

{%
  set bgColorsLt = [
    'white',
    'gray-lt',
  ]
%}

{% set btnLinkStyles = [
    'btn-read-more',
    'link-style',
    'btn-outline',
    'btn-solid',
    'btn-solid btn-wide',
    'btn-tag',
    'btn-read-more',
  ]
%}

{% set iconBtnLinkStyles = [
  'link-chevron',
  'link-back',
  'btn-close',
  'btn-search',
