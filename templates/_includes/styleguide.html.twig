<div class="styleguide-menu-padding">
  <div class="site-container content-side-padding padding-vertical">
    <h2 class="h2 mt-md mb-sm" id="fontstyles">Typography</h2>
    <p class="body-lg mt-zero">assets/css/base/typography.css</p>
    <hr class="mt-sm mb-sm">
    <div class="grid-col-2">
      <div>
        {# Font styles #}
        {% for style in fontStyles %}
          <p class="{{ style }} mb-xs">.{{ style }}</p>
        {% endfor %}
      </div>
      <div>
        {# Font styles as Links#}
        {% for style in fontStyles %}
          <p class="{{ style }} mb-xs"><a href="#">.{{ style }} a</a></p>
        {% endfor %}
      </div>
    </div>
  </div>

  {# Modifiers #}
  <div class="ts-friendly">
    <div class="site-container content-side-padding">
      <h3 class="h3 mb-md" id="fontmodifiers">Common Variations</h3>
      <div class="grid-col-2">
        <div>
          <h1 class="h1 bg-black mb-xs p-card text-white">.h1.text-white</h1>
          <h2 class="h2 mb-xs ">.h2.text-gray-dk</h2>
          <h3 class="bg-gray-dk p-card h3 mb-xs text-white">.h3.text-white</h3>
          <h4 class="h4 mt-sm mb-zero text-black">.h4.text-black</h4>
          <h4 class="bg-gray-lt p-card h4 mt-sm text-gray-dk">.h4.text-gray-dk</h4>
          <h4 class="bg-black p-card h4 letter-spacing mt-zero text-white">.h4.letter-spacing.text-white</h4>
        </div>
        <div>
          <h3 class="h3">Text Color</h3>
          <p class="mt-zero mb-sm">tokens/src/color.tokens.json</p>
          <p class="body-sm gray">.text-[color]. Adds colors to base/_generated-variables</p>
          {% for color in textColorsDk %}
            <p class="text-{{ color }} py-xs body-sm">.text-{{ color }}</p>
          {% endfor %}
          {% for color in textColorsLt %}
            <p class="bg-black text-{{ color }} body-sm p-sm">.text-{{ color }}</p>
          {% endfor %}

          <h3 class="h3 mt-md mb-sm">Text Weight</h3>
          <p class="mt-zero">tokens/src/typography.tokens.json</p>
          <p class="font-bold">.font-bold 700</p>
          <p class="font-semibold">.font-semibold 600</p>
          <p class="font-medium">.font-medium 500</p>
          <p class="font-regular">.font-regular 400</p>
          <p class="font-book">.font-book/.font-light 300</p>
        </div>
      </div> {# Closes .grid #}
    </div> {# Closes .site-container.content-side-padding #}
  </div>

  {# Background colors #}
  <div class="ts-friendly">
