  <div class="styleguide-menu-padding">
    <div class="p-site ts-friendly">
      {# Typography styles, displays as 2-up section #}
      {% include('@ts_motif/_includes/styleguide_sections/typography-styles.html.twig') %}
    </div>

    {# Common Variations, 2-up section #}
    <div class="ts-friendly">
      <div class="p-site">
        <div>
          {# Dynamic Typography color styles #}
          {% include('@ts_motif/_includes/styleguide_sections/font-weights.html.twig') %}
        </div>
      </div> {# Closes .container.p-site #}
    </div>

    <div class="ts-friendly">
      <div class="container p-site">
        {# Color Swatches #}
        {% include('@ts_motif/_includes/styleguide_sections/color-swatches.html.twig') %}
        {# Background colors #}
        {% include('@ts_motif/_includes/styleguide_sections/color-bg.html.twig') %}
      </div> {# Closes .container.p-site #}
    </div>

    <div class="ts-friendly">
      <div class="container p-site">
        {# Buttons & Links #}
        {% include('@ts_motif/_includes/styleguide_sections/btn-link-styles.html.twig') %}
      </div> {# Closes .container.p-site#}
    </div>

    {# Layout #}
    <div class="ts-friendly">
      <div class="container p-site">
        {# Grid layouts #}
        {% include('@ts_motif/_includes/styleguide_sections/layouts.html.twig') %}
      </div> {# Closes container#}
    </div>

    <div class="ts-friendly">
      <div class="container p-site">
        {# Spacers: visual of all sizes #}
        {% include('@ts_motif/_includes/styleguide_sections/spacer-visual.html.twig') %}
      </div>
    </div>

    <div class="ts-friendly">
      <div class="container p-site">
        {# Spacers: Variable Options #}
        {% include('@ts_motif/_includes/styleguide_sections/spacer-variable-options.html.twig') %}
